// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  //Must add binary for production build
}

model User {
  id             Int           @id @default(autoincrement())
  dodId          String?       @unique
  name           String?
  phone          Int?
  email          String?       @unique
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  role           Role?         @relation(fields: [roleId], references: [id])
  roleId         Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?

  @@map(name: "user")
}

model Organization {
  id             Int              @id @default(autoincrement())
  name           String
  //Self reference
  parent         Organization?    @relation(name: "ParentChildren", fields: [parentId], references: [id])
  parentId       Int?
  children       Organization[]   @relation(name: "ParentChildren")
  roles          Role[]
  users          User[]
  trainingRecord TrainingRecord[]

  @@map("organization")
}

model TrainingRecord {
  id             Int          @id @default(autoincrement())
  title          String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int

  @@map("training_record")
}

model Role {
  id             Int          @id @default(autoincrement())
  name           String       @unique @map("name")
  user           User[]
  grants         Grant[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId Int

  @@map(name: "role")
}

model Resource {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  grant Grant[]

  @@map(name: "resource")
}

model Grant {
  id            Int      @id @default(autoincrement())
  action        String
  attributes    String
  resourceModel Resource @relation(fields: [resource], references: [name])
  resource      String   @map("resource_name")
  roleModel     Role     @relation(fields: [role], references: [name])
  role          String   @map("role_name")

  @@map(name: "grant")
}
