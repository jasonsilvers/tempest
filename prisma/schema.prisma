// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  //Must add binary for production build
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  subtitle  String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?    @map("author_id")

  @@map(name: "post")
}

model User {
  id             Int           @id @default(autoincrement())
  dodId          String?       @unique
  name           String?
  email          String?       @unique
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  posts          Post[]
  Role           Role?         @relation(fields: [roleId], references: [id])
  roleId         Int?
  Organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?

  @@map(name: "user")
}

model Organization {
  id       Int            @id @default(autoincrement())
  name     String
  //Self reference
  parent   Organization?  @relation(name: "ParentChildren", fields: [parentId], references: [id])
  parentId Int?
  children Organization[] @relation(name: "ParentChildren")
  roles    Role[]
  users    User[]
}

model Role {
  id                Int          @id @default(autoincrement())
  accessControlName String       @unique @map("access_control_name")
  //Add a flag for AC for sub organizations
  //Can see children organizations
  displayName       String       @map("display_name")
  user              User[]
  grants            Grant[]
  organization      Organization @relation(fields: [organizationId], references: [id])
  organizationId    Int

  @@map(name: "role")
}

model Resource {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  grant Grant[]

  @@map(name: "resource")
}

model Grant {
  id            Int      @id @default(autoincrement())
  action        String
  attributes    String
  resourceModel Resource @relation(fields: [resource], references: [name])
  resource      String   @map("resource_name")
  roleModel     Role     @relation(fields: [role], references: [accessControlName])
  role          String   @map("role_name")

  @@map(name: "grant")
}